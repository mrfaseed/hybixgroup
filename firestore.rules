rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow authenticated users to (read, update, delete AND create) messages
    // This allows the Admin to restore projects as rejected messages
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
